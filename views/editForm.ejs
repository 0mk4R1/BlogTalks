<%- include("partials/header.ejs") %>

<section class="form-section">
    <h2>Edit Blog</h2>
    <form action="/edit/<%= blog.id %>" method="post">
        <div class="form-group">
            <label for="blog-title">Title</label>
            <input type="text" id="blog-title" name="title" value="<%= blog.title %>" required>
        </div>
        <div class="form-group">
            <label for="blog-content">Write your thoughts...</label>
            <textarea id="blog-content" name="content" rows="8" required><%= blog.content %></textarea>
        </div>
        <button type="submit" class="submit-button">Update Blog</button>
        <button class="submit-button"><a href="/">Cancel</a></button>
    </form>
</section>


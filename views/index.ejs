<%- include("partials/header.ejs") %>

<!-- Main Section -->
<main>
    <div class="blog-list">
        <% if (blogs.length > 0) { %>
            <% blogs.forEach(blog => { %>
                <div class="blog-post">
                    <h1><%= blog.title %></h1>
                    <p><%= blog.content %></p>
                    <form action="/delete/<%= blog.id %>" method="post">
                        <button type="submit">Delete</button>
                    </form>
                </div>
            <% }) %>
        <% } else { %>
            <p class="no-blogs-message">Write your thoughts and stories...</p>
        <% } %>
    </div>
</main>

<%- include("partials/footer.ejs") %>
